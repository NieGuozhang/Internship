<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/imbt_mysettings_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/title_bg"
            android:scaleType="fitXY"
            android:src="@drawable/zuo"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="@color/title_bg"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="我的设置"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:background="#E0E0E0"
        android:gravity="left|center_vertical|top"
        android:orientation="vertical" >

        <Button
            android:id="@+id/bt_modifypassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_linearlayout_selector"
            android:drawableRight="@drawable/mdfpassword"
            android:gravity="left|center_vertical"
            android:padding="5dp"
            android:paddingLeft="20dp"
            android:text="修改密码"
            android:textColor="#1C1C1C"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_linearlayout_selector"
            android:drawableRight="@drawable/fankui"
            android:gravity="left|center_vertical"
            android:padding="5dp"
            android:paddingLeft="20dp"
            android:text="意见反馈"
            android:textColor="#1C1C1C"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_linearlayout_selector"
            android:drawableRight="@drawable/about"
            android:gravity="left|center_vertical"
            android:padding="5dp"
            android:paddingLeft="20dp"
            android:text="关于"
            android:textColor="#1C1C1C"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt_exitlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/red_button_selector"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>