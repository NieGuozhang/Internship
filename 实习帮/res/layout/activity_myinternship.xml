<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E0E0E0"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageButton
                        android:id="@+id/imgbt_userhead"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/shape_edit_white"
                        android:padding="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/buddy_8_mb5ucom" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/Suname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="姓        名:"
                            android:textColor="#808080"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textColor="#A9A9A9"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="实习状态:"
                            android:textColor="#808080"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="实习中"
                            android:textColor="#eb4f38"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="实习岗位:"
                            android:textColor="#808080"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_internposition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Android工程师"
                            android:textColor="#11cd6e"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <include layout="@layout/line" />

                <Button
                    android:id="@+id/bt_myresume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/white_linearlayout_selector"
                    android:drawableLeft="@drawable/home"
                    android:drawablePadding="3dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="left|center_vertical"
                    android:padding="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="我的简历"
                    android:textSize="20sp" />

                <include layout="@layout/line" />

                <Button
                    android:id="@+id/bt_myintern"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/white_linearlayout_selector"
                    android:drawableLeft="@drawable/kaishi"
                    android:drawablePadding="3dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="left|center_vertical"
                    android:padding="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="我的实习"
                    android:textSize="20sp" />

                <include layout="@layout/line" />

                <Button
                    android:id="@+id/bt_myapply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/white_linearlayout_selector"
                    android:drawableLeft="@drawable/mail"
                    android:drawablePadding="3dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="left|center_vertical"
                    android:padding="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="我的申请"
                    android:textSize="20sp" />

                <include layout="@layout/line" />

                <Button
                    android:id="@+id/bt_mycollection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_linearlayout_selector"
                    android:drawableLeft="@drawable/shape4"
                    android:drawablePadding="3dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="left|center_vertical"
                    android:padding="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="我的收藏"
                    android:textSize="20sp" />

                <include layout="@layout/line" />

                <Button
                    android:id="@+id/bt_internshipexperience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_linearlayout_selector"
                    android:drawableLeft="@drawable/duoxuan1"
                    android:drawablePadding="3dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="left|center_vertical"
                    android:padding="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="实习经历"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/bt_mysettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/white_linearlayout_selector"
                    android:drawableLeft="@drawable/shezhi"
                    android:drawablePadding="3dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="left|center_vertical"
                    android:padding="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="我的设置"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>